// --- Group: User 用户管理接口 (需要 AuthMiddleware) ---
// 路径前缀: /admin-api/system/user
@server(
    prefix: /admin-api/system/user
    group: user
    jwt: Auth
    middleware: AuthorityMiddleware
)
service system {
    @doc "新增用户"
    @handler createUser
    post /create (UserCreateReq) returns (LongResp)

